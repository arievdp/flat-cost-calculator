<div class="p-2 lg:w-1/4 md:w-1/3 w-full">
  <div class="h-full flex items-center border-gray-200 border p-4 rounded-lg">
    <% if user.image.nil? %>
        <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="http://civilcode.ge/images/2/24/Blank-avatar.png">
    <% else %>
        <img alt="team" class="w-16 h-16 bg-gray-100 object-cover object-center flex-shrink-0 rounded-full mr-4" src="<%= user.image %>">
    <% end %>
    <div class="flex-grow">
      <h2 class="text-gray-900 title-font font-medium"><%= user.name %></h2>
      <p class="text-gray-500">$94.10</p>
    </div>
  </div>
</div>

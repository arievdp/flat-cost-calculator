<div class="w-full max-w-md mx-auto my-8 ">
  <%= simple_form_for @flat, html: {class: "bg-white border border-gray-300 rounded-lg px-8 pt-6 pb-4"} do |f| %>
    <div class="flex flex-col text-center w-full">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Edit: <%= @flat.title %></h1>
    </div>
    <div class="input-group">
      <%= f.input :title, input_html: { class: "input-width" }, label_html: {class: 'label'} %>
    </div>
    <div class="input-group">
      <%= f.input :address, input_html: { class: "input-width" }, label_html: {class: 'label'} %>
    </div>
    <div class="input-group">
      <%= f.association :users, collection: @flat.users, as: :check_boxes, input_html: { class: "input-checkbox" }, label_html: {class: 'label'} %>
    </div>
    <div class="input-group">
      <%= f.submit class:"btn btn-default" %>
    </div>
  <% end %>
</div>

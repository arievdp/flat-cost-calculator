<section class="text-gray-700 body-font">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Flat Splitter
      </h1>
      <p class="mb-8 leading-relaxed">A bill splitting app for organising your house expenses between your flatmates! Built in 24 hours with Ruby on Rails, Devise, OmniAuth, SimpleForm, Tailwind CSS.</p>
      <div class="flex justify-center">
        <% if user_signed_in? %>
          <%= link_to "My Flats", flats_path, class: "inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"ml-4 inline-flex text-gray-700 bg-gray-200 border-0 py-2 px-6 focus:outline-none hover:bg-gray-300 rounded text-lg" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class:"inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
          <%= link_to "Sign Up", new_user_registration_path, class:"ml-4 inline-flex text-gray-700 bg-gray-200 border-0 py-2 px-6 focus:outline-none hover:bg-gray-300 rounded text-lg" %>
        <% end %>
      </div>
    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img class="object-cover object-center rounded" alt="hero" src="https://images.unsplash.com/photo-1569435998017-abb5d562dedf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=720&q=80">
    </div>
  </div>
</section>
